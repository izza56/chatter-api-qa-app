<%= form_tag(qas_path) do %>

  <div class="span-24 last">
	  <% if flash[:error] %>
	    <div id="error_explanation">
	      <h2><%= flash[:error] %></h2>
	    </div>
	  <% end %>
  </div>

  <div class="span-4">	
    <%= label_tag(:name, "Your Name:") %>
  </div>
  <div class="span-14 last">
    <%= text_field_tag(:name, "", :maxlength => 35, :size => 35, :class => "") %>
  </div>

  <div class="span-14">
    <%= text_area_tag 'text', nil, :rows => 5, :cols => 25, :id => "postbody" %>
  </div>
	
  <div class="span-2 last">
    <button name="comment" type="submit"  >Post</button>
	
  </div>

<% end %>
