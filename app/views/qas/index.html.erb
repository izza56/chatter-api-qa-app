<div class="span-24 last" id="front-header" >
	<h2 class="span-12">Chat with the Chatter API team</h2>
	<div class="span-3 last"><a href="https://github.com/henriquez/chatter-api-qa-app">See the code</a></div>
	

	<div class="span-15 last">Check out <%= link_to "the wiki", "https://github.com/developerforce/Chatter-REST-API/wiki" %> first, then post your question or suggestion here.  You can prevent your post from being displayed below by including the #private hashtag.
	</div>
	
	
</div>

<div class="span-24 last">
  <br />
  <%= render :partial => 'form' %>
</div>


	
<div class="span-24 last">
		<br />
	<% if flash[:notice] %>
		<div class="error span-24 last">
		  <%= flash[:notice] %>
		</div>
	<% end %>
	
	<% if @chatouts %>	
		<div id="feed-items" class="span-18 last">

		  <% @chatouts.each do |chatout| %>
		    <div class="feed-item-row span-18 last">
				<div class='user-thumb span-1'>
				   <%= image_cheater(chatout['user']['lastName']) %>
			    </div>
			    <div class='message span-12 last'>
			
				  <span class='user-name bold'><%= sanitize chatout['user']['name']   %></span>&nbsp;
				  <span class='message-body'><%= auto_link(sanitize chatout['body']['text'] ) %></span>
				  <br /> <span class='created-date'><%= time_ago_in_words(chatout['createdDate']) %> ago</span>
				</div>	 
	
			   <% if chatout['comments']['comments'].length > 0 %>

			     <div class='comment-row span-12 clear last'>	
					  <!-- comments -->
					  <% chatout['comments']['comments'].each do |comment| %>
						 <div class='user-thumb span-1'>
						    <%= image_cheater(comment['user']['lastName']) %>
						 </div>
						<div class='comment span-10 last'>
	
							    <span class='user-name bold'><%= sanitize comment['user']['name']%></span>&nbsp;
							<span class='message-body'><%= auto_link(sanitize comment['body']['text']) %></span>
							   <br /> <span class='created-date'><%= time_ago_in_words(comment['createdDate']) %> ago</span>
					   </div>
				    <% end %>
				</div>
			    <% end %>
		    </div>		
		  <% end %>
 
		</div>
	<% end %>
</div>